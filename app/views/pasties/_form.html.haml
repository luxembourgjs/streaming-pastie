= form_for @pastie do |f|
  - if @pastie.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pastie.errors.count, "error")} prohibited this pastie from being saved:"
      %ul
        - @pastie.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
